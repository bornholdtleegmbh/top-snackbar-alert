<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nine_grid_unit"
    android:layout_marginTop="@dimen/one_grid_unit"
    android:layout_marginBottom="@dimen/one_grid_unit">

    <View
        android:id="@+id/snackbar_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nine_grid_unit"
        android:background="@drawable/background_rounded_corners" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/seven_grid_unit"
        android:layout_marginStart="@dimen/three_grid_unit"
        android:layout_marginTop="@dimen/one_grid_unit"
        android:layout_marginEnd="@dimen/three_grid_unit"
        android:layout_marginBottom="@dimen/one_grid_unit"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/snackbar_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toStartOf="@id/snackbar_action_bkk"
            android:gravity="center"
            android:maxLines="3"
            android:textAlignment="center"
            app:autoSizeMaxTextSize="@dimen/text_groÃŸ_text_size"
            app:autoSizeMinTextSize="@dimen/one_grid_unit"
            app:autoSizeTextType="uniform"
            tools:text="FEHLER!!1!1  #*@!$?" />

        <TextView
            android:id="@+id/snackbar_action_bkk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/one_grid_unit"
            android:padding="@dimen/one_grid_unit"
            android:text="@android:string/ok"
            android:visibility="gone"
            tools:visibility="visible" />

    </RelativeLayout>

</RelativeLayout>
